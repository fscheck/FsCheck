<?xml version="1.0" encoding="utf-8"?>
<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <AssemblyName>FsCheck.NUnit</AssemblyName>
        <TargetFramework>netstandard2.0</TargetFramework>
        <GenerateDocumentationFile>true</GenerateDocumentationFile>
        <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
        <PackageDescription>Integrates FsCheck with NUnit</PackageDescription>
        <Description>FsCheck.NUnit integrates FsCheck with NUnit by adding a PropertyAttribute that runs FsCheck tests, similar to NUnit TestAttribute.

            All the options normally available in vanilla FsCheck via configuration can be controlled via the PropertyAttribute.
        </Description>
    </PropertyGroup>
    <ItemGroup>
        <Compile Include="AssemblyInfo.fs"/>
        <Compile Include="FsCheckPropertyAttribute.fs"/>
    </ItemGroup>
    <ItemGroup Condition="'$(IsPacking)' != 'true'">
        <ProjectReference Include="../FsCheck/FsCheck.fsproj"/>
    </ItemGroup>
    <ItemGroup Condition="'$(IsPacking)' == 'true'">
        <PackageReference Include="FsCheck" />
    </ItemGroup>
    <ItemGroup>
        <PackageReference Include="NUnit"/>
    </ItemGroup>
</Project>
